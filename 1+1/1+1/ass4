  #include<stdio.h>
  main()
{
 int i,n;
int sum = 0;
printf("\nC Program to print sum of series 1 + 1/2 + 1/3 + 1/4 + .... + 1/n : \n\n ");
   printf("Enter the number n : ");
   scanf("%d",&n);
   printf("1 + ");
   for (i=1;i<=n;i++)
   {
      sum= sum + i;
      if(n != i)
        printf("1/%d  + ", i);
      else
        printf("1/%d",i);
     
   }
   printf(" = 1/%d",sum); 
}
